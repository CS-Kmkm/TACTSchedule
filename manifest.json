{
    "manifest_version": 3,
    "name": "TACT Schedule",
    "version": "2.0.1",
    "description": "This extension change display based on day of week.",
    "icons": {
        "16": "image/icon16.png",
        "48": "image/icon48.png",
        "128": "image/icon128.png"
    },
    "permissions":[
        "storage"
    ], "options_ui":{
        "page":"options.html",
        "open_in_tab":true
    },
    "action": { 
        "default_icon": "image/icon16.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://tact.ac.thers.ac.jp/portal/*"],
            "css": ["style.css"],
            "js": ["content_script.js"]
        }
    ]

}
